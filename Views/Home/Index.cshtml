@model List<PersonalAccount>

@{
    ViewBag.Title = "title";
    Layout = "_layout";
}

<h2>Счета</h2>

<a asp-action="Create" asp-controller="Home">Добавить лицевой счет</a>

<div class="table_section">
    @if (@Model.Count == 0)
    {
        <h2>Счета еще не добавлены</h2>
    }
    else
    {
        <h2>Список счетов</h2>
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Номер личного счета</th>
                <th>Дата начала действия</th>
                <th>Дата окончания действия</th>
                <th>Адрес</th>
                <th>Площадь помещения</th>
                <th></th>
            </tr>
            @foreach (var account in @Model)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.NumberPA</td>
                    <td>@account.StartDate</td>
                    <td>@account.EndDate</td>
                    <td>@account.Address</td>
                    <td>@account.RoomArea</td>
                    <td>
                        <a asp-route-personalAccountId="@account.Id"
                           asp-action="Edit"
                           asp-controller="Home"
                           class="btn btn-outline-warning">
                            Редактировать
                        </a>
                    </td>
                    <td>
                        <a asp-route-personalAccountId="@account.Id"
                           asp-action="Delete"
                           asp-controller="Home"
                           class="btn btn-outline-warning">
                            Удалить
                        </a>
                    </td>
                    <td>
                        <a asp-route-Id="@account.Id"
                           asp-action="Specification"
                           asp-controller="Home"
                           class="btn btn-outline-warning">
                            Детали
                        </a>
                    </td>
                    <td>
                        <a asp-route-personalAccountId="@account.Id"
                           asp-action="AddResident"
                           asp-controller="Home"
                           class="btn btn-outline-warning">
                            Добавить жителя
                        </a>
                    </td>
                                            
                </tr>
            }
            
        </table>
    }
</div>
